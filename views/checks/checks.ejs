<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <%- include("../templates/header.ejs", {title : "آیفون استور", css : "homePage"}) %>
</head>
<body>
  <%- include("../templates/sideBar.ejs") %>
  <div id="check-container">
    <div>
      <h1>چک ها</h1>
      <a href="/checks/new">ثبت چک</a>
    </div>
    <% if(checks[0]){ %>
      <% checks.forEach(check => { %>
        <%- include("../templates/checkTemplate.ejs", {check, convert}) %>
      <% }) %>
    <% }else{ %>
      <div class="err">چکی یافت نشد.</div>
    <% } %>
  </div>
</body>
</html>